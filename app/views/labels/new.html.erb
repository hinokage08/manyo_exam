<%= form_with(model: @label, local:true) do |f| %>
  <% if @label.errors.any? %>
    <div id="error_explanation">
      <h2><%= @label.errors.count %><%= t('view.error_number') %></h2>
      <ul>

      <% @label.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h2><%= t('view.labels_new') %></h2>

  <%= f.label :name %>
  <p><%= f.text_field :name %></p>

  <%= f.submit t('view.label_new') %>
<% end %>

<%= link_to t('view.label_index'), labels_path %>
