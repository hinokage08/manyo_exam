<h2>ユーザー一覧</h2>

<%= link_to "新規登録", new_admin_user_path, class: "btn btn-primary" %>

<table>
  <tr>
    <th class= 'th_user_name'><%= "ユーザー名" %></th>
    <th class= 'th_email'><%= "メールアドレス" %></th>
    <th class= 'th_admin'><%= "管理者権限" %></th>
    <th class= 'th_tasks_count'><%= "タスク数" %></th>
    <th class= 'th_created_at'><%= "作成日時" %></th>
    <th class= 'th_updated_at'><%= "更新日時" %></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.admin? ? "有" : "無" %></td>
    <td><%= user.tasks.count %></td>
    <td><%= user.created_at.strftime('%Y-%m-%d') %></td>
    <td><%= user.updated_at.strftime('%Y-%m-%d') %></td>
    <td><div class="alert alert-warning" role="alert"><%= link_to "詳細", admin_user_path(user.id), class: "alert-link" %></div></td>
    <td><div class="alert alert-info" role="alert"><%= link_to "編集", edit_admin_user_path(user.id), class: "alert-link" %></div></td>
    <td><div class="alert alert-danger" role="alert"><%= link_to "削除", [:admin, user], class: "alert-link",  method: :delete ,data: { confirm: "本当に削除してもよろしいですか？" } %></td>
  </tr>
<% end %>
</table>
<%= paginate @users %>
