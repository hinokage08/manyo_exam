<%= form_with(model: @task, local:true) do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count %><%= t('view.error_number') %></h2>
      <ul>

      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="task_name">
    <%= form.label :task_name %>
    <%= form.text_field :task_name %>
  </div>
  <div class="content">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div class="deadline">
    <%= form.label :deadline %>
    <%= form.date_field :deadline %>
  </div>
  <div class="priority">
    <%= form.label :priority %>
    <%= form.select :priority, {高: '高', 中: '中', 低: '低'}  %>
  </div>

  <% if action_name == 'new' %>

  <div class="status">
    <%= form.hidden_field :status, value: 0 %>
  </div>
  <%= form.submit "タスクを作成" %>

  <% else %>
  <div class="status">
    <%= form.label :status %>
    <%= form.select :status, {未着手:'未着手', 着手中: '着手中', 完了: '完了'} %>
  </div>
  <%= form.submit "タスクを更新" %>
  <% end %>
<% end %>
